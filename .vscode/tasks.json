{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"args": [
				"--bin=viewer",
			],
			"group": "build",
			"label": "cargo debug viewer"
		},
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"args": [
				"--release",
				"--bin=viewer",
			],
			"group": "build",
			"label": "cargo release viewer"
		},
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"args": [
				"--bin=importer",
			],
			"group": "build",
			"label": "cargo debug importer"
		},
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"args": [
				"--release",
				"--bin=importer",
				// "--features=segmentation-svgs"
			],
			"group": "build",
			"label": "cargo release importer"
		}
	]
}