	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug import",
			"cargo": {
				"args": [
					"build",
					"--bin=importer",
					"--package=importer"
				],
				"filter": {
					"name": "importer",
					"kind": "bin"
				}
			},
			"sourceLanguages": [
				"rust"
			],
			"cwd": "${workspaceFolder}/cwd",
			"args": [
				"${input:file}",
				"./${input:output}",
			],
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug viewer",
			"cargo": {
				"args": [
					"build",
					"--bin=viewer",
					"--package=viewer"
				],
				"filter": {
					"name": "viewer",
					"kind": "bin"
				}
			},
			"sourceLanguages": [
				"rust"
			],
			"cwd": "${workspaceFolder}/cwd",
			"args": [
				"./${input:output}",
			],
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Release import",
			"cargo": {
				"args": [
					"build",
					"--release",
					"--bin=importer",
					"--package=importer"
				],
				"filter": {
					"name": "importer",
					"kind": "bin"
				}
			},
			"sourceLanguages": [
				"rust"
			],
			"cwd": "${workspaceFolder}/cwd",
			"args": [
				"${input:file}",
				"./${input:output}",
			],
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Release viewer",
			"cargo": {
				"args": [
					"build",
					"--release",
					"--bin=viewer",
					"--package=viewer"
				],
				"filter": {
					"name": "viewer",
					"kind": "bin"
				}
			},
			"sourceLanguages": [
				"rust"
			],
			"cwd": "${workspaceFolder}/cwd",
			"args": [
				"./${input:output}",
			],
		},
	],
	"inputs": [
		{
			"id": "file",
			"type": "pickString",
			"default": "test.laz",
			"description": "input file",
			"options": [
				"ULS-off_BR01_2020-03-27.laz",
				"ULS-off_SP02_2020-04-01.laz",
				"ULS-on_SP02_2019-09-03.laz",
				"ALS-on_SP02_2019-07-05_140m.laz",
			]
		},
		{
			"id": "output",
			"type": "pickString",
			"default": "test",
			"description": "input file",
			"options": [
				"test",
				"test2",
			]
		}
	]
}
